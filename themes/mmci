\tikzset{
    % default style for poster block
    posterblock/.style={
        opacity=0.5,
        text opacity=1.0,
        fill=black!25,
        draw,
        ultra thick,
        inner sep=0,
        outer sep=0,
        rounded corners
    },
    % default style for logo bar
    logobar/.style={
        align=center,
        % make the bar a little bit wider than the paper width,
        % such that the left and right borders are not visible
        minimum width=\paperwidth + 10pt,
        text width=\textwidth,
		white,
		opacity=1.0,
        inner sep=5
    },
    title/.style={
		white,
		opacity=1.0,
		fill=blue!70,
		anchor=north,
    }
}

% tweak layout
\setblockpadding{20}
\setblockspacing{15}
\setmargins{15}{15}



\makeatletter
\renewcommand{\maketitle}{
    \begin{posterblock}[title]
        \begin{center}
            {\huge{\bf{\@title}}} \\
            \vspace{10pt}
            {\large\@author}
        \end{center}

    \end{posterblock}
}
\makeatother
